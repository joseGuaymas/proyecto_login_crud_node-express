<body>
    <header>
        <nav class="nav-container container">
            <h2 class="title">TP Database</h2>
        </nav>
    </header>
    <table class="db">
        <thead>
            <tr>
                <th>ID<th>
                <th>Destino</th> 
                <th>Provincia</th> 
                <th>Paquete</th>
                <th>Imagen</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            {{#each travels}}
            <tr>
                <td>{{id}}</td>
                <td>{{city}}</td>
                <td>{{country}}</td>
                <td>{{pack}}</td>
                <td><img src="{{imageURL}}"></td|>

                <td class="btn-handler-box">
                    <a href="/listado/handlerEdit/{{id}}"> <input  class="btn" type="button" value="Editar"> </a>
                    <a href="/listado/handlerEdit/{{id}}"> <input  class="btn-delete" type="button" value="Borrar"> </a>
                </td>
            </tr>
            {{/each}} 
        </tbody>
    </table>

    <div class="btn-add-box">
        <td colspan="6"> <a href="/listado/addTravel"><input class="btn" type="button" value="Agregar destino"></a> </td>
        <a href="/login"> <input class="btn-cancel btn" type="button" value="Cerrar sesión"> </a>                  
    </div>    

    <div>
        {{#if user}}
        <a href="/login/logout"></a>
        {{else}}
        <a href="/login"></a>
        {{/if}}
    </div>

</body>

